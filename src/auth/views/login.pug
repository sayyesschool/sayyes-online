extends /shared/layouts/page

append head
    style.
        main {
            width: 100vw;
            height: 100vh;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }

        .flash {
            border-radius: 0;
        }

        .form-signin {
            display: flex;
            flex-direction: column;
            width: 100%;
            max-width: 330px;
            margin: auto;
            gap: 1rem;

            img {
                width: 128px;
            }
        }

block body
    main
        include /shared/includes/flash

        form.form-signin(method='post' action='/login')
            div
                img(src="https://static.sayes.ru/images/logos/sayyes-purple.png")

            div.form-floating
                input.form-control(
                    id="email-input"
                    type="email"
                    name="email"
                    placeholder="name@example.com"
                    autocomplete="email"
                    required
                )
                label(for="email-input") Электронная почта

            div.form-floating
                input.form-control(
                    id="password-input"
                    type="password"
                    name="password"
                    minlength="6"
                    maxlength="128"
                    placeholder=" "
                    autocomplete="current-password"
                    required
                )
                label(for="password-input") Пароль

            button.btn.btn-primary.btn-lg(type="submit") Войти

            button.btn.btn-link(type="button" data-bs-toggle="modal" data-bs-target="#password-modal") Забыли пароль?

        include ./includes/password-dialog

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous")