extends /shared/layouts/page

append head
    style.
        .flash {
            border-radius: 0;
        }

        main {
            width: 100vw;
            height: 100vh;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }

        main > .form {
            display: flex;
            flex-direction: column;
            width: 100%;
            max-width: 330px;
            margin: auto;
            gap: 1rem;
        }

        main > .form img {
            width: 128px;
        }

block body
    main
        include /shared/includes/flash

        +form#login-form(method='post' action='/login')
            div
                img(src="https://static.sayes.ru/images/logos/sayyes-purple.png")

            div.form-floating
                input.form-control(
                    id="email-input"
                    type="email"
                    name="email"
                    placeholder="name@example.com"
                    autocomplete="email"
                    required
                )
                label(for="email-input") Электронная почта

            div.form-floating
                input.form-control(
                    id="password-input"
                    type="password"
                    name="password"
                    minlength="6"
                    maxlength="128"
                    placeholder=" "
                    autocomplete="current-password"
                    required
                )
                label(for="password-input") Пароль

            button.btn.btn-primary.btn-lg(type="submit") Войти

            button.btn.btn-link(type="button" data-bs-toggle="modal" data-bs-target="#password-modal") Забыли пароль?

        include ./includes/password-dialog

    script(src="/js/front.vendors.js")
    script(src="/js/front.main.js")
    script.
        document.querySelectorAll('.form').forEach(form => {
            form.addEventListener('submit', function() {
                const submitButton = this.querySelector('button[type="submit"]');
                if (submitButton)
                    submitButton.disabled = true;
            });
        });