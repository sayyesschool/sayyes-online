+mdc-dialog()(element='form' method='post' action='/request')#request-dialog
    +mdc-dialog__title('Оставить заявку')

    +mdc-dialog__content
        +mdc-layout()(column)
            +mdc-text-field()(
                type='text'
                name='name'
                label='Имя'
                leadingIcon='person'
                outlined 
                required
            )
            
            +mdc-text-field()(
                type='text'
                name='phone'
                label='Телефон'
                leadingIcon='phone'
                outlined
                required
            )
    
    +mdc-dialog__actions
        +mdc-dialog__button('Закрыть')(type='button' action='cancel')
        +mdc-dialog__button('Отправить')(type='submit' outlined default)