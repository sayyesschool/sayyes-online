extends ../shared/layout

block body
    main
        include /shared/includes/flash

        form.form-signin(method='post' action='/login')
            div
                img(src="https://static.sayes.ru/images/logos/sayyes-purple.png")

            div.form-floating
                input.form-control(
                    id="email-input"
                    type="email"
                    name="email"
                    placeholder="name@example.com"
                    autocomplete="email"
                    required
                )
                label(for="email-input") Электронная почта

            div.form-floating
                input.form-control(
                    id="password-input"
                    type="password"
                    name="password"
                    placeholder="nikethecat"
                    minlength="6"
                    maxlength="128"
                    autocomplete="current-password"
                    required
                )

                label(for="password-input") Пароль

            button.btn.btn-primary.btn-lg(type="submit") Войти

            button.btn.btn-link(type="button" data-bs-toggle="modal" data-bs-target="#password-modal") Забыли пароль?

        include ../shared/includes/password-dialog

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous")