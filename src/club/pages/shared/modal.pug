mixin modal(title, description)
    div.modal&attributes(attributes)
        div.modal__surface
            button.modal__close
                svg(width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg")
                    path(d="M1 1L17 17M17 1L1 17" stroke="currentColor" stroke-width="2" stroke-linecap="round")
            
            div.modal__body
                if title || description
                    div.modal__header
                        if title
                            h2.modal__title= title 

                        if description
                            p.modal__description= description

                    div.modal__content
                        block