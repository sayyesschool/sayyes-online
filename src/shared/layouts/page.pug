extends base

append head
    link(
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
        crossorigin="anonymous"
    )
    script(
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"
        defer
    )
    style.
        :root {
            --bs-font-sans-serif: "Nunito","Helvetica","Arial",sans-serif;
        }

        .btn-primary {
            --bs-btn-bg: #5a1294;
            --bs-btn-border-color: #5a1294;
            --bs-btn-hover-bg: #4d0f7e;
            --bs-btn-hover-border-color: #480e76;
            --bs-btn-focus-shadow-rgb: 115,54,164;
            --bs-btn-active-bg: #480e76;
            --bs-btn-active-border-color: #440e6f;
            --bs-btn-disabled-bg: #5a1294;
            --bs-btn-disabled-border-color: #5a1294;
        }

        .btn-link {
            --bs-link-color: #5a1294;
            --bs-link-hover-color: #480e76;
        }

block body
    include ../includes/header

    include ../includes/flash

    block main

    include ../includes/footer