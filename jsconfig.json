{
    "include": [
        "./src/**/*",
        "./test/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "compilerOptions": {
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "class/*": [
                "./src/class/app/*"
            ],
            "club/*": [
                "./src/club/app/*"
            ],
            "cms/*": [
                "./src/cms/app/*"
            ],
            "core/*": [
                "./src/core/*"
            ],
            "crm/*": [
                "./src/crm/app/*"
            ],
            "lk/*": [
                "./src/lk/app/*"
            ],
            "lms/*": [
                "./src/lms/app/*"
            ],
            "shared/*": [
                "./src/shared/*"
            ]
        },
        "target": "es2020"
    }
}